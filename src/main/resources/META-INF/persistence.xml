<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">

    <persistence-unit name="BELAJAR">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entity Classes -->
        <class>programmerzamannow.jpa.entity.Customer</class>
        <class>programmerzamannow.jpa.entity.Category</class>
        <class>programmerzamannow.jpa.entity.Image</class>
        <class>programmerzamannow.jpa.entity.Member</class>
        <class>programmerzamannow.jpa.entity.Department</class>
        <class>programmerzamannow.jpa.entity.User</class>
        <class>programmerzamannow.jpa.entity.Credential</class>
        <class>programmerzamannow.jpa.entity.Wallet</class>
        <class>programmerzamannow.jpa.entity.Product</class>
        <class>programmerzamannow.jpa.entity.Brand</class>
        <class>programmerzamannow.jpa.entity.Department</class>
        <class>programmerzamannow.jpa.entity.Employee</class>
        <class>programmerzamannow.jpa.entity.Manager</class>
        <class>programmerzamannow.jpa.entity.VicePresident</class>
        <class>programmerzamannow.jpa.entity.Payment</class>
        <class>programmerzamannow.jpa.entity.PaymentGopay</class>
        <class>programmerzamannow.jpa.entity.PaymentCreditCard</class>
        <class>programmerzamannow.jpa.entity.Transaction</class>
        <class>programmerzamannow.jpa.entity.TransactionDebit</class>
        <class>programmerzamannow.jpa.entity.TransactionCredit</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/belajar_java_persistence_api"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
